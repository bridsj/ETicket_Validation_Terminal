<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sys_info_title_margin"
        android:paddingLeft="30dp"
        android:text="@string/app_name2"
        android:textColor="@color/black_50_alpha"
        android:textSize="@dimen/sys_info_title_size" />

    <LinearLayout
        android:layout_width="@dimen/sys_info_limit_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sys_info_content_margin"
        android:background="@drawable/border_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/query_result_title"
            android:textColor="@color/black"
            android:textSize="@dimen/sys_info_normal_text" />

        <ScrollView
            android:layout_width="match_parent"
            android:paddingRight="50dp"
            android:layout_height="@dimen/query_result_limit_height"
            android:scrollbarThumbVertical="@drawable/base_list_scrollbar_handle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_name"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:id="@+id/name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_id_card"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:id="@+id/id_card_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_validity"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:id="@+id/validity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_mark"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_mark"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_mark"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_mark"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_mark"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_mark"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/validation_result_info_margin2"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/validation_mark"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />

                    <TextView
                        android:id="@+id/mark_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/black_60_alpha"
                        android:textSize="@dimen/validation_result_info_text_size" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/close_box"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/sys_info_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_red_selector"
                android:text="@string/close"
                android:textColor="@color/white" />


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/back_box"
        style="@style/go_back_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/goback" />
    </RelativeLayout>
</RelativeLayout>