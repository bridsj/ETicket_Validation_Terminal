<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/validation_result_selector"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/validation_result_padding"
    android:paddingTop="@dimen/validation_result_padding">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/validation_result_text_color"
        android:textSize="@dimen/sys_info_normal_text" />


</LinearLayout>