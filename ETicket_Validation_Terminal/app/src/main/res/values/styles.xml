<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="text_shadow_style">
        <item name="android:shadowColor">@color/black_20_alpha</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="text_small_shadow_style">
        <item name="android:shadowColor">@color/black_30_alpha</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="home_small_button_style">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="home_button_button_style" parent="@style/text_small_shadow_style">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="keyboard_style">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">@dimen/sys_info_warn_text</item>
    </style>

    <style name="edit_style">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="query_button_style">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sys_info_button_style">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">@dimen/sys_info_normal_text</item>
    </style>

    <style name="sys_info_progress_bar_style" parent="@style/progress_bar_style">
        <item name="android:layout_marginLeft">120dp</item>
    </style>
    <style name="print_progress_bar_style" parent="@style/progress_bar_style">
        <item name="android:layout_marginLeft">90dp</item>
    </style>
    <style name="query_progress_bar_style" parent="@style/progress_bar_style">
        <item name="android:layout_marginLeft">70dp</item>
    </style>
    <style name="ID_card_progress_bar_style" parent="@style/progress_bar_style">
        <item name="android:layout_marginLeft">170dp</item>
    </style>
    <style name="validation_result_progress_bar_style" parent="@style/progress_bar_style">
        <item name="android:layout_marginLeft">120dp</item>
    </style>

    <style name="go_back_style">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">30dp</item>
    </style>

    <style name="qr_code_button_style">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ID_card_button_style">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="validation_result_button_style">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="report_title_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/sys_info_normal_text</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>

    <style name="validation_result_name_style">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="validation_result_edit_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
</resources>
